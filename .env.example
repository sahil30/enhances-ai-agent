# Custom AI API Configuration
CUSTOM_AI_API_URL=https://api.example.com/v1/chat/completions
CUSTOM_AI_API_KEY=your_custom_ai_api_key_here
CUSTOM_AI_MODEL=gpt-4
CUSTOM_AI_MAX_TOKENS=2000
CUSTOM_AI_TEMPERATURE=0.7

# Confluence Configuration
CONFLUENCE_ACCESS_TOKEN=your_confluence_access_token_here
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_SPACES=["DEV", "DOC", "API"]  # Specific spaces to search (JSON array or comma-separated)
CONFLUENCE_TIMEOUT=30.0
CONFLUENCE_MAX_RETRIES=3
CONFLUENCE_CONTENT_TYPES=["page", "blogpost"]

# JIRA Configuration
JIRA_ACCESS_TOKEN=your_jira_access_token_here
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_PROJECTS=["PROJ", "BUG", "FEAT"]  # Specific projects to search (JSON array or comma-separated)
JIRA_ISSUE_KEY_PREFIXES=["RNDPLAN", "RNDDEV", "SUPPORT"]  # Filter by issue key prefixes (e.g., RNDPLAN-123, RNDDEV-456)
JIRA_TIMEOUT=30.0
JIRA_MAX_RETRIES=3
JIRA_FIELDS=["summary", "description", "status", "assignee", "reporter", "priority", "created", "updated"]

# Code Repository Configuration
CODE_REPO_PATH=./your_code_repository
CODE_SUPPORTED_EXTENSIONS=[".java", ".py", ".js", ".ts", ".json", ".yaml", ".yml", ".xml", ".sh", ".sql", ".md"]
CODE_EXCLUDE_PATTERNS=["node_modules/*", "target/*", "build/*", "dist/*", ".git/*", "*.log", "*.tmp", "*.cache", ".env", ".env.*"]
CODE_EXCLUDE_PATHS=["src/test/resources/excluded", "legacy/old-code"]  # Specific paths to exclude
CODE_MAX_FILE_SIZE=1048576  # Maximum file size in bytes (1MB)

# MCP Server Configuration
CONFLUENCE_MCP_SERVER_URL=ws://localhost:3001
JIRA_MCP_SERVER_URL=ws://localhost:3002

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes  
CACHE_TTL_LONG=3600      # 1 hour
ENABLE_FILE_CACHE=true
FILE_CACHE_DIR=./cache

# Monitoring Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
ENABLE_CORS=true